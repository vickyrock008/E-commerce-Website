# This is an example file. Copy this to .env and fill in your actual credentials.

# --- Database ---
DATABASE_URL=postgresql://user:password@hostname:5432/database_name

# --- Email Service (SendGrid) ---
MAIL_USERNAME=apikey
MAIL_PASSWORD=YOUR_SECRET_SENDGRID_API_KEY
MAIL_FROM=your_verified_sender@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.sendgrid.net
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
ADMIN_EMAIL=your_admin_email@example.com